<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="net.rainville.android.bcugc.UploadFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnSelectFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/select_file"/>

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelectFile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:text="Title"
        android:textSize="18sp"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTitle"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/video_description"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/editTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:hint="@string/tag_hint"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTags"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/btn_upload_video"
        android:visibility="invisible"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnUpload"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="status"
        android:textSize="24sp"
        android:visibility="invisible"/>

</RelativeLayout>
